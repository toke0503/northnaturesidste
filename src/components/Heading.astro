---
// Henter parametrene fra Astro.props
const { htmlheading="h2", size="medium", font="heading", stylingclasses=""} = Astro.props; 
const Htmlheading = htmlheading;
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"h1": "text-[3.5rem] lg:text-[10.625rem]", // 56px on mobile, 170px on lg
"h2": "text-[2.25rem] lg:text-[4rem]", // 36px on mobile, 64px on lg
"h3": "text-[1.5rem] lg:text-[2.25rem]", // 24px on mobile, 36px on lg
"h4": "text-[1.25rem] lg:text-[1.6875rem]", // 20px on mobile, 27px on lg
"large": "text-3xl lg:text-6xl",
"medium": "text-2xl lg:text-3xl",
"small": "text-xl",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
"display": "font-display",
"sans": "font-sans",
"serif": "font-serif",
"heading": "font-heading",
};

//Definer font weight baseret på heading type
const weightClasses = {
"h1": "font-bold", // 700
"h2": "font-bold", // 700
"h3": "font-bold", // 700
"h4": "font-semibold", // 600
};
---
<Htmlheading class:list={[stylingclasses, sizeClasses[size] || sizeClasses[htmlheading], fontClasses[font], weightClasses[htmlheading]]}><slot /></Htmlheading>