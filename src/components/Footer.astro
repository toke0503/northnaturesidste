---
import donegron from "../assets/images/donegron.webp";
import gammelalbo from "../assets/images/gammelalbo.svg";
import garmin from "../assets/images/garmin.svg";
import kattegat from "../assets/images/kattegat.svg";
import lakor from "../assets/images/lakor.svg";
import lillebaelt from "../assets/images/lillebaelt.svg";
import limfjord from "../assets/images/limfjord.svg";
import mcmandem from "../assets/images/mcmandem.svg";
import wwf from "../assets/images/wwf.svg";
import fb from "../assets/images/fb.svg";
import ig from "../assets/images/ig.svg";
import yt from "../assets/images/yt.svg";
import linkedin from "../assets/images/linkedin.svg";
---

<footer class="bg-background pt-0 pb-16 lg:pb-20 lg:pt-0">
	<!-- Partner Banner -->
	<div class="w-full bg-background overflow-hidden mb-10">
		<div class="relative h-20 flex items-center">
			<div class="animate-partner-scroll flex items-center gap-12 min-w-full">
				<img src={gammelalbo.src} alt="Gammelalbo" class="h-12 w-auto" />
				<img src={garmin.src} alt="Garmin" class="h-12 w-auto" />
				<img src={kattegat.src} alt="Kattegat" class="h-12 w-auto" />
				<img src={lakor.src} alt="Lakor" class="h-12 w-auto" />
				<img src={lillebaelt.src} alt="Lillebælt" class="h-12 w-auto" />
				<img src={limfjord.src} alt="Limfjord" class="h-12 w-auto" />
				<img src={mcmandem.src} alt="McMandem" class="h-12 w-auto" />
				<img src={wwf.src} alt="WWF" class="h-12 w-auto" />
				<!-- Repeat for infinite effect -->
				<img src={gammelalbo.src} alt="Gammelalbo" class="h-12 w-auto" />
				<img src={garmin.src} alt="Garmin" class="h-12 w-auto" />
				<img src={kattegat.src} alt="Kattegat" class="h-12 w-auto" />
				<img src={lakor.src} alt="Lakor" class="h-12 w-auto" />
				<img src={lillebaelt.src} alt="Lillebælt" class="h-12 w-auto" />
				<img src={limfjord.src} alt="Limfjord" class="h-12 w-auto" />
				<img src={mcmandem.src} alt="McMandem" class="h-12 w-auto" />
				<img src={wwf.src} alt="WWF" class="h-12 w-auto" />
			</div>
		</div>
		<style>
			@keyframes partner-scroll {
				0% { transform: translateX(0); }
				100% { transform: translateX(-50%); }
			}
			.animate-partner-scroll {
				animation: partner-scroll 40s linear infinite;
			}
			@media (max-width: 640px) {
				.animate-partner-scroll {
					animation-duration: 10s;
				}
			}
		</style>
	</div>
	<div class="px-[8.333vw] w-full">
		<div class="max-w-7xl mx-auto flex flex-col lg:flex-row justify-between items-start lg:items-end gap-12">
			<!-- Left: Contact Info -->
			<div class="flex flex-col gap-8">
				<div class="text-primary font-serif text-[1.125rem] lg:text-[1.25rem] leading-relaxed space-y-1">
					<p>North Nature</p>
					<p>Enghaven 20</p>
					<p>DK-7900 Nykøbing M</p>
					<p>42075817</p>
					<p class="mt-4">kontakt@northnature.dk</p>
					<p>(+45)23460397</p>
					<a href="#" class="block mt-4 underline underline-offset-2 decoration-1 transition-all duration-200 hover:underline-offset-4 hover:decoration-2">Persondatapolitik</a>
				</div>

				<!-- Social Icons -->
				<div class="flex gap-4">
					<a href="https://www.facebook.com/NorthNaturedk?locale=da_DK" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="transition-transform duration-200 hover:scale-110">
						<img src={fb.src} alt="Facebook" class="w-12 h-12 transition duration-200 hover:brightness-110" />
					</a>
					<a href="https://www.instagram.com/northnaturedk/" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="transition-transform duration-200 hover:scale-110">
						<img src={ig.src} alt="Instagram" class="w-12 h-12 transition duration-200 hover:brightness-110" />
					</a>
					<a href="https://www.youtube.com/channel/UCRnON5-mkcPwXEEfxZu8I-Q" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="transition-transform duration-200 hover:scale-110">
						<img src={yt.src} alt="YouTube" class="w-12 h-12 transition duration-200 hover:brightness-110" />
					</a>
					<a href="https://linkedin.com/company/north-nature?originalSubdomain=dk" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="transition-transform duration-200 hover:scale-110">
						<img src={linkedin.src} alt="LinkedIn" class="w-12 h-12 transition duration-200 hover:brightness-110" />
					</a>
				</div>
			</div>

			<!-- Right: Logo -->
			<div class="shrink-0">
				   <img src={donegron.src} alt="North Nature" class="w-70 lg:w-100 xl:w-125" />
			</div>
		</div>
	</div>
</footer>